<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="carte-page">
        <div class="carte-controls">
            <h1>Carte du territoire</h1>
            <div class="filters">
                <button class="filter-btn active" data-filter="all">Tout voir</button>
                <button class="filter-btn" data-filter="projets">Projets</button>
                <button class="filter-btn" data-filter="besoins">Besoins</button>
            </div>
            
            <div class="legend">
                <div class="legend-item">
                    <span class="legend-marker projets"></span>
                    <span>Projets financés</span>
                </div>
                <div class="legend-item">
                    <span class="legend-marker besoins"></span>
                    <span>Besoins du territoire</span>
                </div>
            </div>
        </div>
        
        <div id="map" class="map-container"></div>
        
        <!-- Panel d'informations -->
        <div id="info-panel" class="info-panel hidden">
            <button class="close-btn" onclick="closeInfoPanel()">×</button>
            <div id="info-content"></div>
        </div>
    </main>
    
    <%- include('partials/footer') %>
    
    <script src="/js/carte.js"></script>
</body>
</html>
